@model OrderEntry.Models.Order

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.OrderID)

        <div class="form-group">
            @Html.LabelFor(model => model.OrderNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="margin-top: 8px">
                @Html.HiddenFor(model => model.OrderNumber)
                @Html.DisplayFor(model => model.OrderNumber, new { @class = "form-control", style = "display: compact" })
                @Html.ValidationMessageFor(model => model.OrderNumber)
                -
                @Html.DisplayFor(model => model.OrderSuffix, new { @class = "form-control", style = "width: 50px" })
                @Html.ValidationMessageFor(model => model.OrderSuffix)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrderType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.OrderType, Model.OrderTypes, new { @class = "form-control", style = "width: 175px" })
                @Html.ValidationMessageFor(model => model.OrderType)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WarehouseNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.WarehouseNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.WarehouseNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomerNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerPO, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerPO, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomerPO)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TakenBy, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TakenBy, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TakenBy)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Taxable, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Taxable, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Taxable)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Details", new { id = Model.OrderID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
